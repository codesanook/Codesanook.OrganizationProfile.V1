@using Codesanook.OrganizationProfile.Models
@model ContactFormPart

<div class="form-group">
    @Html.TextBoxFor(m => m.Name, new { @class = "form-control input-contact-us", placeholder = @Html.DisplayNameFor(m => m.Name) })
    @Html.ValidationMessageFor(m => m.Name)
</div>

<div class="form-group">
    @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control input-contact-us", placeholder = @Html.DisplayNameFor(m => m.EmailAddress) })
    @Html.ValidationMessageFor(m => m.EmailAddress)
</div>

<div class="form-group">
    @Html.TextBoxFor(m => m.MobilePhoneNumber, new { @class = "form-control  input-contact-us", placeholder = @Html.DisplayNameFor(m => m.MobilePhoneNumber) })
    @Html.ValidationMessageFor(m => m.MobilePhoneNumber)
</div>

<div class="form-group">
    @Html.TextAreaFor(m => m.Message, new { @class = "form-control input-contact-us", placeholder = @Html.DisplayNameFor(m => m.Message) , rows = 6})
    @Html.ValidationMessageFor(m => m.Message)
</div>

<button type="submit" class="btn-submit-contact-us">SUBMIT</button>
