@using Codesanook.OrganizationProfile.Models
@model ContactFormPart

<div class="form-group">
    @Html.TextBoxFor(m => m.Name, new { @class = "test", placeholder = "Name" })
    @Html.ValidationMessageFor(m => m.Name)
</div>

<div class="form-group">
    @Html.LabelFor(m => m.EmailAddress)
    @Html.TextBoxFor(m => m.EmailAddress, new { @class = "test"})
    @Html.ValidationMessageFor(m => m.EmailAddress)
    <small id="emailHelp" class="form-text text-muted">
        We'll never share your email with anyone else.
    </small>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.MobilePhoneNumber)
    @Html.TextBoxFor(m => m.MobilePhoneNumber, new { @class = "test" })
    @Html.ValidationMessageFor(m => m.MobilePhoneNumber)
    <small id="emailHelp" class="form-text text-muted">
        We'll never share your phone number with anyone else.
    </small>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Message)
    @Html.TextAreaFor(m => m.Message, new { @class = "test" })
    @Html.ValidationMessageFor(m => m.Message)
</div>

<button type="submit" class="btn btn-secondary">Submit</button>
